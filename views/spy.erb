<!DOCTYPE HTML>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title><%= @urlset.combined_keys %></title>
		<style type="text/css">
			a {color:#fff;} a:visited {color:#fffffe;}
		</style>
	</head>
	<body>
		<div id="spy">
      <% @urlset.urls.each do |url| %>
        <p>
          <a href="<%= url %>"><%= url %></a>
          <% 
            base_url = url.gsub(/^https?:\/\//,'')
            base_url = base_url.gsub(/^www\./,'')
          %>
          <% [ 'http://', 'https://', 'http://www.', 'https://www.'  ].each do |prefix| %>
            <a href="<%= prefix << base_url %>"><%= url %></a>
          <% end %>
        </p>
      <% end %>
		</div>
    <script src="https://ajax.googleapis.com/ajax/libs/mootools/1.3.2/mootools-yui-compressed.js" type="text/javascript"></script>
    <script type="text/javascript" src="/spy.js"></script>
	</body>
</html>
